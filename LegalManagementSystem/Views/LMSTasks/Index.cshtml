@model IEnumerable<LegalManagementSystem.Models.LMSTask>

@{
    ViewBag.Title = "Index";
}

<h2>List of Tasks</h2>

<p>
    <a href="@Url.Action("Create","LMSTasks")" class="btn btn-primary">
        <span style="font-size:x-large" class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaskType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatterNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotifyDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reporter)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Assignee)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>Actions</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaskType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatterNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NotifyDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reporter)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Assignee)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            <a href="@Url.Action("Edit","LMSTasks",new {id = item.Id })" style="margin-right:10px;">
                <span style="font-size:large" class="glyphicon glyphicon-edit"></span>
            </a>
            <a href="@Url.Action("Details","LMSTasks",new {id = item.Id })">
                <span style="font-size:large" class="glyphicon glyphicon-eye-open"></span>
            </a>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id })*@ @*|
        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
