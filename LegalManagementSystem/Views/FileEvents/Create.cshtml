@model LegalManagementSystem.Models.FileEvent
@using LegalManagementSystem.Helpers
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Event Attach to a Case</h2>

