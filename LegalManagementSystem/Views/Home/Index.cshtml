@model LegalManagementSystem.Models.Company

@{
    ViewBag.Title = "Home Page";
}
<style>
    .section-img {
        height: 80px;
        width: 80px;
    }
    .index-item a {
        font-size: large;
    }

</style>
@*class="jumbotron"*@
<div style="margin-bottom:50px;">
    <h1>LMS</h1>
    <p class="lead">
        Law Management System is a software that enables the law firms manage
        their clients, cases, events reminder and many more.
