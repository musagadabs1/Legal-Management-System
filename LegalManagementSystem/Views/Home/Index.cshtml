                <a href="@Url.Action("Index","Matters")" @*data-toggle="modal"*@><span onclick="legalMatterAddForm()">3. Add your first <p class="bolder">Matter</p></span></a>
            </div>
            @*class="col-sm-3"*@
            <div>
                <a href="@Url.Action("Index","Matters")" @*data-toggle="modal"*@> <img class='section-img' src="~/Content/Images/custodian-secure-email-manager.png" onclick="legalMatterAddForm()" /></a>
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="col-md-4">
            <div class="index-item">
                @*class="col-sm-8"*@
                <a href="@Url.Action("Index","LMSTasks")" @*data-toggle="modal"*@><span onclick="taskAddForm()">4. Add your first <p class="bolder">Task</p></span></a>
            </div>
            <div>
                @*class="col-sm-4"*@
                <a href="@Url.Action("Index","LMSTasks")" @*data-toggle="modal"*@> <img class='section-img' src="~/Content/Images/Task.png" onclick="taskAddForm()" /></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="index-item">
                @*class="col-sm-8 "*@
                <a href="@Url.Action("Index","Calendars")" @*data-toggle="modal"*@><span onclick="meetingForm()">5. Add your first <p class="bolder">Calendar Meeting</p></span></a>
            </div>
            <div class="index-item">
                @*class="col-sm-4"*@
                <a href="@Url.Action("Index","Calendars")" @*data-toggle="modal"*@> <img class='section-img' src="~/Content/Images/calendar-icon-13.png" onclick="meetingForm()" /></a>
            </div>
        </div>
    </div>
</div>

