            </div>
        </div>
        <div class="col-md-4">
            @*class="col-sm-8 no-padding-left"*@
            <div class="index-item">
                <a href="@Url.Action("Index","Clients")" @*data-toggle="modal"*@><span onclick="contactAddForm()">2. Add your first <p class="bolder">Contact</p></span></a>
            </div>
            @*class="col-sm-4"*@
