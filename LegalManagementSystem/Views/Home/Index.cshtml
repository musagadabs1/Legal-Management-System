                <a href="@Url.Action("Index","Clients")" @*data-toggle="modal"*@> <img class='section-img' src="~/Content/Images/smile-circle-clip-art-contacts.png" onclick="contactAddForm()" /></a>
            </div>
        </div>
        <div class="col-md-4">
            @*class="col-sm-8 " style="margin-left:5px;"*@
