@model LegalManagementSystem.Models.Certification

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<h2>Edit Certification</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <span class="glyphicon glyphicon-remove-circle">@ViewBag.Error.ToString()</span>
        </div>
    }
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Name" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Description" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.CertificationType, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.CertificationType, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Type" } })
            @Html.ValidationMessageFor(model => model.CertificationType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.DateAchieved, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DateAchieved,"{0:MM/dd/yyyy}", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateAchieved, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        
        <div>
            @Html.LabelFor(model => model.Skilled, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.Skilled, new SelectList(ViewBag.Skilled, "Value", "Text"), "--- Select Skilled ---", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Skilled, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6">
            <button type="submit" class="btn btn-info">Update</button>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index","Certifications")" class="btn btn-info">Cancel</a>
        </div>
    </div>
</div>
}

