<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#courtTable').DataTable({
            "ajax": {
                "url": "@Url.Action("GetCourtActivities", "CourtActivities")",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "MatterNumber", "name": "MatterNumber" },
                { "data": "DateHeared", "name": "DateHeared" },
                { "data": "CourtName", "name": "CourtName" },
                { "data": "Location", "name": "Location" },
                { "data": "Status", "name": "Status" },
                { "data": "AdvocateArgument", "name": "AdvocateArgument" },
                { "data": "OpponentArgument", "name": "OpponentArgument" },
                { "data": "DefenseCounselName", "name": "DefenseCounselName" },
                { "data": "AdvocateNote", "name": "AdvocateNote" },
                { "data": "DateAdjourned", "name": "DateAdjourned" },

            ],
            "serverSide": "true",
            "order": [0, "asc"],
            "processing": "true",
            "language": {
                "processing":"Processing... please wait."
            }
        });
    });
    $(document).ready(function () {
        $('#btnSubmit').on('click', function () {
            var password = $('#txtPassword').val();
            $('#Passwordmodal').modal('toggle');
            $('.modal').modal('hide').data('bs.modal', null);
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetStaffPassword", "CourtActivities")' + '?password=' + password,
                contentType: "application/json; charset=utf-8",
                dataType: "json"
                //success: function (response) {
                //    if (response != null) {
                //    }
                //},
            });
        })
    })
</script>