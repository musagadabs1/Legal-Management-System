        function bindActivityTable() {
            $('#courtTable').DataTable({
                "serverSide": "true",
                "order": [0, "asc"],
                "processing": "true",
                "paging": true,
                "filter": true,
                "pageLength": 10,
                "lengthMenu": [[5, 10, 50, 100], [5, 10, 50, 100]],
                "sort": true,
                "language": {
                    'emptyTable': 'No record found.',
                    'processing': '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                },
                "ajax": {
                    "url": "@Url.Action("AllCourtActivitiesForMatterNumber", "CourtActivities")",
                    "type": "POST",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "MatterNumber"},
                    { "data": "DateHeared"},
                    { "data": "CourtName"},
                    { "data": "Location"},
                    { "data": "Status"},
                    { "data": "AdvocateArgument"},
                    { "data": "OpponentArgument"},
                    { "data": "DefenseCounselName"},
                    { "data": "AdvocateNote"},
                    { "data": "DateAdjourned"},

                ],
                "buttons": [
                    'excel', 'pdf'
                ],
                'createdRow': function (row, data, index) {
                    $(row).append($("<td>").html(actionButton(data)));
                }

            });
        };
