@model LegalManagementSystem.Models.CourtActivity

@{
    ViewBag.Title = "Details";
}
<style>
    dl {
        /*border: 3px double #ccc;*/
        padding: 0.5em;
    }
  dt {
    /*float: left;
    clear: left;*/
    /*width: 100px;*/
    text-align: right;
    font-weight: bold;
    color: green;
  }
  dt::after {
    content: ":";
  }
  dd {
    /*margin: 0 0 0 110px;
    padding: 0 0 0.5em 0;*/
    text-align: left;
  }
</style>

    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8 align-center">
            <div class="card">
                <div class="card-header text-capitalize">
                    <h5 class="card-title text-capitalize">Court Activity Details</h5>
                </div>
                <div class="card-body">
                    <div>
                        <dl class="row" style="width:93%; margin:0 auto">

                            <dt class="col-md-4">
                                Hearing Date
                            </dt>

                            <dd class="col-md-8">
                                @Model.DateHeared.ToShortDateString()
                            </dd>

                            <dt class="col-md-4">
                                Court Name
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.CourtName)
                            </dd>

                            <dt class="col-md-4">
                                Court Location
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.Location)
                            </dd>

                            <dt class="col-md-4">
                                Case Status
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.Status)
                            </dd>

                            <dt class="col-md-4">
                                Advocate's Argument
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.AdvocateArgument)
                            </dd>

                            <dt class="col-md-4">
                                Defendant Counsel's Argument
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.OpponentArgument)
                            </dd>

                            <dt class="col-md-4">
                                Advocate's Note
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.AdvocateNote)
                            </dd>

                            <dt class="col-md-4">
                                Defense Counsel's Name
                            </dt>

                            <dd class="col-md-8">
                                @Html.DisplayFor(model => model.DefenseCounselName)
                            </dd>

                            <dt class="col-md-4">
                                Date Adjourned
                            </dt>

                            <dd class="col-md-8">
                                @Model.DateAdjourned.Value.ToShortDateString()
                            </dd>

                        </dl>  
                    </div>
                    <p style="margin-left:100px;">
                        <a href="@Url.Action("Edit","CourtActivities", new {id = Model.Id  })">
                            <span style="font-size:large" class="glyphicon glyphicon-edit"> Edit Activity</span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>



