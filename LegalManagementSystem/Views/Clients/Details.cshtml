@model LegalManagementSystem.Models.Client

@{
    ViewBag.Title = "Details";
}
    <style>
            dl {
                /*border: 3px double #ccc;*/
                padding: 0.5em;
            }

            dt {
                /*float: left;
                clear: left;*/
                /*width: 100px;*/
                text-align: right;
                font-weight: bold;
                color: green;
            }

                dt::after {
                    content: ":";
                }

            dd {
                /*margin: 0 0 0 110px;
                padding: 0 0 0.5em 0;*/
                text-align: left;
            }
    </style>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">Client Details</h3>
                </div>
                <div class="card-body">

                    <div>
                        <dl class="row">
                            <dt class="col-md-4 col-sm-12">
                                First  Name
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.FirstName)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Middle Name
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.MiddleName)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Last Name
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.LastName)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Email Address
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.EmailAddress)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Phone Number
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Address
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.Address)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Town
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.Town)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                Postal Code
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.PostalCode)
                            </dd>

                            <dt class="col-md-4 col-sm-12">
                                WebSite
                            </dt>

                            <dd class="col-md-8 col-sm-12">
                                @Html.DisplayFor(model => model.Website)
                            </dd>

                        </dl>
                    </div>
                    <p style="margin-left:100px;">
                        <a href="@Url.Action("Edit","Clients", new {id = Model.ClientId  })">
                            <span style="font-size:large" class="glyphicon glyphicon-edit"> Edit</span>
                        </a>
                    </p>

                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
