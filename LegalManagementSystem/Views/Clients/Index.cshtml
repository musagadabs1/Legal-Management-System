@model IEnumerable<LegalManagementSystem.Models.Client>

@{
    ViewBag.Title = "Index";
}
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title align-center">Registered Clients</h5>
                <a href="@Url.Action("Create","Clients")" class="btn btn-primary">
                    <span style="font-size:x-large" class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="width:70%; margin:0 auto">
                    <table class="table table-responsive table-hover table-condensed" id="client-table">
                        <thead>
                            <tr>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Email Address
                                </th>
                                <th>
                                    Phone Number
                                </th>
                                <th>Actions</th>
                                <th></th>
                            </tr>
                        </thead>


                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>*@
                                    <td>
                                        <a href="@Url.Action("Edit","Clients",new {id = item.ClientId })" style="margin-right:10px;">
                                            <span style="font-size:large" class="glyphicon glyphicon-edit"></span>
                                        </a>
                                        <a href="@Url.Action("Details","Clients",new { id = item.ClientId})">
                                            <span style="font-size:large" class="glyphicon glyphicon-eye-open"></span>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>

                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>




@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#client-table').DataTable();
        });
    </script>
}

