<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#casetable').DataTable({
            "ajax": {
                "url": "@Url.Action("GetMatters", "Matters")",
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "Subject", "name": "Subject" },
                { "data": "Description", "name": "Description" },
                { "data": "AreaOfPractice", "name": "AreaOfPractice" },
                { "data": "MatterNumber", "name": "MatterNumber" },
                { "data": "ArrivalDate", "name": "ArrivalDate" },
                { "data": "FiledOn", "name": "FiledOn" },
                { "data": "DueDate", "name": "DueDate" },
                { "data": "Priority", "name": "Priority" },
                { "data": "MatterStage", "name": "MatterStage" },

            ],
            "serverSide": "true",
            "order": [0, "asc"],
            "processing": "true",
            "language": {
                "processing":"Processing... please wait."
            }
            
        });

        $('#btnMatterNumber').on("click",function () {
        var matterNumber = $('#matterNumber').val();

            $.ajax({
                url: '@Url.Action("GetMatterNumber", "CourtActivities")?matterNumber=' + matterNumber,
                datatype: 'json',
                type: 'post',
                contentType: 'application/json'

            });
        });
    });

</script>
