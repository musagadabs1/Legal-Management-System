@model LegalManagementSystem.ViewModels.ReportParameter
@using LegalManagementSystem.Helpers
@{
    ViewBag.Title = "All Staff Report";
}

<h2>All Staff</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>ReportParameter</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-6">
                @Html.LabelForRequired(model => model.DocType, "Report Type", htmlAttributes: new { @class = "control-label" })

                @Html.DropDownListFor(model => model.DocType, new SelectList(ViewBag.ReportType, "Value", "Text"), "---Select Report Type---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DocType, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Download" class="btn btn-primary" />
            </div>
        </div>
    </div>
}