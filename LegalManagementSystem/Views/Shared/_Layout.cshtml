    <script type="text/javascript">
        $(document).ready(function () {

            demo.initChartist();

            $.notify({
                icon: 'pe-7s-gift',
                message: "Welcome to <b>Law Management System</b> - a beautiful app for every Law Firm."

            }, {
                    type: 'info',
                    timer: 4000
                });

        });
