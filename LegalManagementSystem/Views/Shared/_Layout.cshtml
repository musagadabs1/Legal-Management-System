                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>


            <footer class="footer">
                <div class="container-fluid">
                    <p class="copyright text-center">
                        &copy;
