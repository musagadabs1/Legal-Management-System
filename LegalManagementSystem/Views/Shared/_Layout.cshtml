                                    <li><a href="#">Separated link</a></li>*@
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <p>
                                        LMS
                                        <b class="caret"></b>
                                    </p>

                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Index","Matters")">Cases</a></li>
                                    <li><a href="@Url.Action("Index","LineManagers")">Line Managers</a></li>
                                    <li><a href="@Url.Action("Index","Staffs")">Staff Profile</a></li>
