            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")" class="simple-text">
                        LMS
                    </a>
                </div>

                <ul class="nav">
                    <li class="active">
                        <a href="@Url.Action("Index","Matters")">
                            <i class="fa fa-dashboard"></i>
                            <p>Dashboard</p>
